<% let input = 'w-full h-12 px-4 bg-white/25 rounded-lg placeholder:text-white text-white text-xl font-medium tracking-wide outline-white' %>
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moula Pass | Authentification</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/auth.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>body { background: linear-gradient(to right, #38ef7d, #11998e); }</style>
  </head>
  <body class="min-h-screen p-5 flex">
    <form
      action="/auth"
      method="post"
      class="w-full max-w-xs m-auto space-y-4"
    >
      <input
        type="text"
        name="firstName"
        placeholder="PrÃ©nom"
        maxlength="30"
        required
        class="<%= input %>"
      />
      <input
        type="text"
        name="lastName"
        placeholder="Nom"
        maxlength="30"
        required
        class="<%= input %>"
      />
      <input
        type="password"
        name="password"
        placeholder="Mot de passe"
        maxlength="30"
        required
        class="<%= input %>"
      />
      <button
        type="submit"
        class="w-full h-12 rounded-lg text-white text-xl font-medium tracking-wide outline-white <%= error ? 'underline underline-offset-2 decoration-red-400' : '' %>"
      >Connexion</button>
    </form>
  </body>
</html>